<% provide(:title, 'トレード投稿') %>
<h1>トレード投稿</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @post) do |f| %>
        
     
      <%= f.label :日付 %>
      <%= f.date_field :date, class: 'date-control' %>

      <%= f.label :エントリー時間足 %>
      <%= f.text_field :alphanumeric, class: 'time-control' %>

      <%= f.label :リスクリワード %>
      <%= f.text_field :risk_reward, class:  'ratio-control' %>

      <%= f.label :エントリー根拠 %>
      <%= f.text_field :content, class: 'entry-control' %>

      <%= f.submit "投稿する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
